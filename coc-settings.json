{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "json",
    "markdown",
    "python",
    "sass",
    "scss",
    "scss",
    "xml"
  ],

  "emmet.includeLanguages": { "jinja.html": "html", "jinja": "html" },
  "emmet.showAbbreviationSuggestions": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showSuggestionsAsSnippets": true,

  "explorer.buffer.tabOnly": true,
  "explorer.file.column.git.icon.added": "",
  "explorer.file.column.git.icon.deleted": "",
  "explorer.file.column.git.icon.ignored": "",
  "explorer.file.column.git.icon.modified": "",
  "explorer.file.column.git.icon.renamed": "",
  "explorer.floating.border.enable": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.selected": "",
  "explorer.previewAction.onHover": false,
  "explorer.width": 25,

  "explorer.keyMappings": {
    "v": "open:vsplit"
  },

  "html.autoClosingTags": true,
  "html.enable": true,
  "html.filetypes": ["html", "jinja", "jinja.html"],
  "html.format.enable": false,
  "html.format.indentInnerHtml": true,

  "java.codeGeneration.toString.codeStyle": "STRING_BUILDER",
  "java.codeGeneration.useBlocks": true,
  "java.codeGeneration.generateComments": false,
  "java.format.onType.fixComment.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.settings.url": "/home/snsm/.config/nvim/formatter/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.home": "/home/snsm/.local/share/sdkman/candidates/java/current",

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gdscript"],
      "port": 6008
    }
  },

  "prettier.bracketSpacing": true,
  "prettier.disableLanguages": ["vue"],
  "prettier.printWidth": 80,
  "prettier.trailingComma": "all",

  "snippets.extends": {
    "html": ["jinja", "jinja.html"],
    "jinja": ["html", "jinja.html"],
    "jinja.html": ["jinja", "html"]
  },

  "suggest.completionItemKindLabels": {
    "class": "ﰩ",
    "constant": "",
    "enum": "ﰊ",
    "enumMember": "ﰉ",
    "field": "",
    "interface": "",
    "keyword": "",
    "method": "",
    "property": "",
    "snippet": "",
    "text": "",
    "variable": ""
  }
}

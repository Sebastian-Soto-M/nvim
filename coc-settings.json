{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "html",
    "sass",
    "javascript",
    "json",
    "python",
    "scss",
    "sh",
    "xml"
  ],

  "emmet.includeLanguages": { "jinja.html": "html", "jinja": "html" },
  "emmet.showAbbreviationSuggestions": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showSuggestionsAsSnippets": true,

  "explorer.buffer.tabOnly": true,
  "explorer.file.column.git.icon.added": "",
  "explorer.file.column.git.icon.deleted": "",
  "explorer.file.column.git.icon.ignored": "",
  "explorer.file.column.git.icon.modified": "",
  "explorer.file.column.git.icon.renamed": "",
  "explorer.floating.border.enable": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.selected": "",
  "explorer.previewAction.onHover": false,
  "explorer.width": 50,

  "explorer.keyMappings": {
    "v": "open:vsplit"
  },

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gdscript"],
      "port": 6008
    }
  }
}
